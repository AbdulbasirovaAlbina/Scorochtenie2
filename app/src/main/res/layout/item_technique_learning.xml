<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/surfaceColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header section with icon and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/technique_icon_bg"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/technique_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/technique_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textColorPrimary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/technique_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/textColorSecondary"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1" />

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/technique_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/textColorPrimary"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Benefits section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Преимущества:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/technique_benefits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="?attr/textColorSecondary"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Difficulty level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сложность:"
                android:textSize="13sp"
                android:textColor="?attr/textColorSecondary"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:id="@+id/difficulty_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Stars will be added programmatically -->
            </LinearLayout>

        </LinearLayout>

        <!-- Action button -->
        <Button
            android:id="@+id/practice_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Перейти к демонстрации"
            android:textColor="@android:color/white"
            android:background="@drawable/practice_button_bg"
            android:textSize="14sp"
            android:textStyle="bold"
            android:elevation="0dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
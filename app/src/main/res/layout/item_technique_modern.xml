<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="?attr/surfaceColor"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="140dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Контейнер для иконки, названия и прогресса -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- Иконка с градиентным фоном -->
            <LinearLayout
                android:id="@+id/icon_container"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/technique_icon_modern_bg"
                android:gravity="center"
                android:elevation="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/technique_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_practice" />

            </LinearLayout>

            <!-- Название техники -->
            <TextView
                android:id="@+id/technique_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название\nтехники"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="12dp" />

            <!-- Шкала прогресса -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/technique_progress_background"
                android:layout_marginBottom="8dp">

                <View
                    android:id="@+id/technique_progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/technique_progress_fill"
                    android:layout_gravity="start|center_vertical" />

            </FrameLayout>

            <!-- Текст прогресса -->
            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/3"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/textColorSecondary"
                android:layout_gravity="center" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <!-- Header -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки приложения"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/textColorPrimary"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Theme Switch -->
    <LinearLayout
        android:id="@+id/theme_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/surfaceColor"
        app:layout_constraintTop_toBottomOf="@id/settings_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_dark_theme"
            app:tint="?attr/iconTint" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Темная тема"
            android:layout_marginStart="16dp"
            android:textColor="?attr/textColorPrimary"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/theme_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

    </LinearLayout>

    <!-- Clear Progress -->
    <LinearLayout
        android:id="@+id/clear_progress_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/surfaceColor"
        app:layout_constraintTop_toBottomOf="@id/theme_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            app:tint="?attr/iconTint" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Очистить прогресс"
            android:layout_marginStart="16dp"
            android:textColor="?attr/textColorPrimary"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Help -->
    <LinearLayout
        android:id="@+id/help_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/surfaceColor"
        app:layout_constraintTop_toBottomOf="@id/clear_progress_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_help"
            app:tint="?attr/iconTint" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Справка"
            android:layout_marginStart="16dp"
            android:textColor="?attr/textColorPrimary"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Reminder Settings -->
    <include
        android:id="@+id/reminder_settings"
        layout="@layout/item_reminder_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/help_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
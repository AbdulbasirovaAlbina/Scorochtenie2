<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <!-- Header with gradient background -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/home_header_gradient"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="20dp"
        android:paddingTop="35dp"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/home_logo_bg"
            android:layout_marginBottom="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Скорочтение"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

    </LinearLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quote Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="?attr/surfaceColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡 Цитата дня"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorSecondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/quote_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="«Чтение — это окошко, через которое дети видят и познают мир и самих себя»"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:textColor="?attr/textColorPrimary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/quote_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="— В. А. Сухомлинский"
                        android:textSize="13sp"
                        android:textColor="?attr/textColorSecondary"
                        android:gravity="end"
                        android:layout_gravity="end" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Statistics Row removed by request -->

            <!-- Quick Actions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚀 Быстрые действия"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:weightSum="2">

                <!-- Start Learning Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quick_learning_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/surfaceColor"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📚"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Обучение"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textColorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Start Practice Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quick_practice_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/surfaceColor"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎯"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Практика"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textColorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Tips Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/surfaceColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡 Совет дня"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColorSecondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tip_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Начинайте тренировки с 10-15 минут в день. Регулярность важнее продолжительности!"
                        android:textSize="14sp"
                        android:textColor="?attr/textColorPrimary"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
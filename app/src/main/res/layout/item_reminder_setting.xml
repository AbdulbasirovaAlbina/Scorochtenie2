<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="?attr/backgroundColor">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Напоминания о занятиях"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/textColorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Переключатель напоминаний -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/surfaceColor"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_notification"
            app:tint="?attr/iconTint" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ежедневные напоминания"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textColor="?attr/textColorPrimary" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/reminder_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Выбор времени -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/surfaceColor"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_time"
            app:tint="?attr/iconTint" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Время напоминания"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textColor="?attr/textColorPrimary" />

        <TextView
            android:id="@+id/reminder_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <!-- Граница для выбранного состояния - будет переопределена в values-night -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/selection_border_light" />
                    <size android:width="48dp" android:height="48dp" />
                </shape>
            </item>
            <!-- Желтый круг внутри -->
            <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
                <shape android:shape="oval">
                    <solid android:color="#FFEB3B" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <!-- Обычное состояние -->
        <shape android:shape="oval">
            <solid android:color="#FFEB3B" />
            <size android:width="42dp" android:height="42dp" />
        </shape>
    </item>
</selector>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения для уведомлений -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Scorochtenie2"
        tools:targetApi="31">
        <activity android:name=".PointerMethodActivity" android:exported="false" />
        <activity android:name=".BlockReadingActivity" android:exported="false" />
        <activity android:name=".SentenceReverseActivity" android:exported="false" />
        <activity android:name=".WordReverseActivity" android:exported="false" />
        <activity android:name=".DiagonalReadingActivity" android:exported="false" />
        <activity android:name=".PartiallyHiddenLinesActivity" android:exported="false" />
        <activity android:name=".CurtainTextCurtainActivity" android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PracticeActivity"
            android:exported="false" />
        <activity
            android:name=".LearningActivity"
            android:exported="false" />
        <activity
            android:name=".TechniqueSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".TechniqueDemoActivity"
            android:exported="false" />
            
        <!-- Сервис для напоминаний -->
        <receiver
            android:name=".ReminderService"
            android:exported="false" />
            
    </application>

</manifest>